<p id="notice"><%= notice %></p>

<div class="container">
  <table id="cart" class="table table-hover table-condensed">
      <thead>
      <tr>
        <th style="width:45%">Product</th>
        <th style="width:10%">Price</th>
        <th style="width:13%">Quantity</th>
        <th style="width:22%" class="text-center">Subtotal</th>
        <th style="width:10%"></th>
      </tr>
    </thead>
    <%= render(@cart.line_items) %>
    <tfoot>
      <tr class="visible-xs">
        <td class="text-center"><strong>Total <%= number_to_currency(@cart.total_price) %></strong></td>
      </tr>
      <tr>
        <td>
          <%= link_to 'Continue Shopping', store_path, class: "btn btn-warning" %>
        </td>
        <td colspan="2" class="hidden-xs"><%= button_to 'Empty cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <td class="hidden-xs text-center"><strong>Total <%= number_to_currency(@cart.total_price) %></strong></td>
        <td><%= link_to 'Checkout', new_order_path, class: "btn btn-success" %></td>
      </tr>

    </tfoot>
  </table>
</div>