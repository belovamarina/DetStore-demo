<div class="container">
  <div class="row">
    <% @categories.each do |category| %>

    <div class="col-xs-6 col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= category.title %></h3></div>
        <div class="panel-body">
          <%= link_to image_tag(category.picture.url(:medium)), category_path(category) %>
          <p><%= link_to 'Show', category_path(category) %></p>
        </div>
       </div>
      </div>

      <% end %>
  </div>
</div>