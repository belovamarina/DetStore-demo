 <tbody>
  <tr>
    <td data-th="Product">
      <div class="row">
        <div class="col-sm-2 hidden-xs"><%= image_tag line_item.product.picture.url(:thumb) %></div>
        <div class="col-sm-10">
          <h4 class="nomargin"><%= line_item.product.title %></h4>
        </div>
      </div>
    </td>
    <td data-th="Price"><%= number_to_currency(line_item.product.price) %></td>


    <td data-th="Quantity" id="quantity">
      <div class="row">
      <%= form_for(line_item, method: :put) do |f| %>
        <div class="col-sm-8"><%= f.number_field :quantity, in: 1..20, class: "form-control text-center", value: line_item.quantity %></div>
        <div class="col-sm-4"><%= button_tag(class: "btn btn-info btn-sm") do %>
          <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
        <% end %></div>
      <% end %>
    </div>
    </td>
    <td data-th="Subtotal" class="text-center"><%= number_to_currency(line_item.total_price) %></td>
    <td data-th="" class="actions">
      <%= link_to line_item, method: :delete, class: "btn btn-danger btn-sm" do %>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      <% end %>
    </td>
    </div>               
  </tr>
</tbody>