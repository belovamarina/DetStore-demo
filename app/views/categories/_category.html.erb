<div class="item  col-xs-4 col-lg-4">
    <div class="thumbnail">
        <%= image_tag category.picture.url(:medium), class: "group list-group-image" %>
        <div class="caption">
            <h4 class="group inner list-group-item-heading">
                <%= category.title %></h4>
            <p class="group inner list-group-item-text">
                <%= category.description %></p>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                </div>
                <div class="col-xs-12 col-md-6">
                   <a class="btn btn-primary" role="button" data-toggle="collapse" href="#<%= category.id %>" aria-expanded="false" aria-controls="collapseExample">
                        See products:
                    </a>
                    <br>
                    <div class="collapse" id="<%= category.id %>">
                        <div class="well">
                        <%= render(category.products) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>