<div class="item  col-xs-4 col-lg-4">
    <div class="thumbnail">
        <%= image_tag product.picture.url(:thumb), class: "group list-group-image" %>
        <div class="caption">
            <h4 class="group inner list-group-item-heading">
                <%= product.title %></h4>
            <p class="group inner list-group-item-text">
                <%= product.description %></p>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="lead">
                        <%= number_to_currency(product.price) %></p>
                </div>
                <div class="row">
                <div class="col-xs-12 col-md-3">
                    <div class="btn-group inline" role="group" aria-label="...">
                       <%= button_to 'Add to Cart', line_items_path(product_id: product), id: "add-to-cart-btn", class: "btn btn-success", remote: true %>
                   </div>
                </div>

                <div class="col-xs-12 col-md-3">
                    <div class="btn-group inline" role="group" aria-label="...">
                       <%= link_to 'Show', product_path(product.id), class: "btn btn-warning" %>
                   </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>